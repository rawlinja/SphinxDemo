<style>
    .search-container {        
        border: 1px dotted gray;
        margin: 5px;
    }
    div#search-menu li {
        display:inline;
        border: 1px dashed gray;
        padding: 10px;  
        margin-right: 5px;
        text-decoration: none; 
        list-style: none;
    }
    div#search-menu li:hover {
       background-color: lightgray;
    }
    div#search-menu li a {
        text-decoration: none;
    }   
    .search-options {
        padding: 10px;
    }
    .invisible {
        display:none;
    }    
    .items-container {
        border: 1px dotted green;
        margin: 10px;
        padding: 10px;
    }
    tbody tr:nth-child(2n) {
        background-color: lightgray;
    }
</style>
<div class="search-container">
    <div id="search-menu" placeholder="Select table to search">
        <ul>
            <li><img src="" title="City" /></li>
            <li><a href="">Country</a></li>
        </ul>
    </div>
    <div class="search-options">
        <input type="text" id="searchBox" name="searchBox"  placeholder="Enter keyword to search" />
        <input type="button" id="searchButton" value="Search" />
    </div>    
</div>

<div id="results" class="items-container invisible">
</div>
<div id="pages" class="items-container invisible">
</div>

    <script id="results-template" type="text/x-handlebars" data-template-name="results-template">     
    {{#if items}}
    <table>
    <thead>
        <tr><th>Id</th>
            <th>Name</th>
            <th>CountryCode</th>
            <th>District</th>
            <th>Population</th>
       </tr>
     </thead>
     <tbody>
       {{#each items}}
       <tr>
            <td>{{Id}}</td>
            <td>{{Name}}</td>
            <td>{{CountryCode}}</td>    
            <td>{{District}}</td>
            <td>{{Population}}</td>
        </tr>
        {{/each}}
    </tbody>
    </table>
    {{/if}} 
    </script>
    
    
    <script id="pages-template" type="text/x-handlebars" data-template-name="pages-template"> 
    <span>
    {{#each pages}}
    <a data-start="{{start}}" data-page="{{number}}" title={{start}} href="http://">{{number}}</a> |
        {{#if isLast}}
            {{#if showNext}}
                <a id="next" title="{{end}}" data-start="{{end}}" href="http://">Next >></a>
            {{/if}}
        {{/if}}    
    {{/each}}  
    <span>{{total}} items</span>
    </span>             
    </script>

@Scripts.Render("~/bundles/handlebars")
@Scripts.Render("~/bundles/index")